font-family = "MesloLGMDZ Nerd Font Mono"

theme = "{{ ghostty_theme }}"

background-opacity  = 0.5
background-blur     = true
background          = "#000000"

macos-titlebar-style = "transparent"

mouse-hide-while-typing = true
scrollback-limit = 1000000
copy-on-select = true
window-save-state = always

keybind = super+r=reload_config

# Trying to fly without tmux temporarily
# command = zsh -l -c "tmux attach || tmux"

# Default shell: Nushell
command = {{ shell_bin_path }}/nu -l

# Fallback: Use zsh to set up PATH before launching nu
# command = /bin/zsh -l -c 'exec nu -l'

# Set XDG_CONFIG_HOME so Nushell finds config at ~/.config/nushell
# instead of ~/Library/Application Support/nushell
env = XDG_CONFIG_HOME=/Users/{{ username }}/.config

# Allow tmux to set window title
window-title-font-family = "MesloLGMDZ Nerd Font Mono"
