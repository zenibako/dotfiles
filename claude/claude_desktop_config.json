
{
  "mcpServers": {
{{#if mcp_salesforce_enabled}}
    "Salesforce DX": {
      "command": "npx",
      "args": ["-y", "@salesforce/mcp", 
               "--orgs", "DEFAULT_TARGET_ORG", 
               "--toolsets", "all"]
    },
{{/if}}
    "Chrome DevTools": {
      "command": "zsh",
      "args": ["-c", "source ~/.nvm/nvm.sh && nvm use --lts >&2 && npx chrome-devtools-mcp@latest"]
    }{{#if mcp_odaseva_enabled}},
    "Odaseva": {
      "command": "oda-mcp",
      "args": ["-env", "/Users/{{ username }}/Projects/oda-mcp/.env"]
    }{{/if}}
  }
}
